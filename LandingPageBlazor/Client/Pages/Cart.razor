@page "/cart"
@inject NavigationManager NavigationManager
<DownloadAppNav/>

<div class="col bg-white py-3 mb-1">
    <div class="row align-items-center">
        <div class="col p-0 text-center">
            <img class="rounded-circle" height="35" width="35"
                 src="https://www.clipartmax.com/png/full/200-2001557_chrome-icon-android-kitkat-png-image-circle-real-life-examples.png"
                 alt="">
        </div>
        <div class="col-6 p-0 text-truncate">
            <h5 class="font-weight-bold">ShopName asdas dasdas dasd asd asd</h5>
        </div>
        <div class="col-4 text-right">
            <button class="btn btn-danger btn-sm rounded-pill">+ เพิ่มสินค้า</button>
        </div>
    </div>
</div>

<div class="col bg-white py-2 mb-1">
    <h6 class="font-weight-bold pb-1">รายละเอียดการจ่ายเงิน</h6>
    <div class="row pb-1">
        <div class="col">
            <h6>รวมค่าสินค้า</h6>
        </div>
        <div class="col text-right">
            <h6>0.00 <small>THB</small></h6>
        </div>
    </div>
    <div class="row pb-1">
        <div class="col">
            <h6>ค่าจัดส่ง</h6>
        </div>
        <div class="col text-right">
            <h6>0.00 <small>THB</small></h6>
        </div>
    </div>
    <div class="row rol-cols-2 pb-1">
        <div class="col">
            <h6>ราคารวมทั้งหมด</h6>
        </div>
        <div class="col text-right">
            <h6 class="text-danger font-weight-bold">0.00 <small class="font-weight-bold">THB</small></h6>
        </div>
    </div>
</div>

<div class="col bg-white py-2 mb-1">
    <h6 class="pb-2">รายการที่สั่ง (1 รายการ)</h6>
    <div class="row">
        <div class="col-3 p-0 text-center">
            <img height="60" width="60"
                 src="https://cdn4.buysellads.net/uu/7/87530/1618004014-MC_CSSTricks_Logo_600x600-3.png">
        </div>
        <div class="col">
            <div class="row pb-1">
                <div class="col text-truncate p-0">
                    <h6>1x Product Name</h6>
                </div>
                <div class="col text-right">
                    <h6>0.00 <small>THB</small></h6>
                </div>
            </div>
            <div class="row pb-1">
                <div class="col text-truncate p-0 text-danger">
                    <h6>Detail1, Detail2</h6>
                </div>
                <div hidden class="col text-right">
                    <h6>0.00 <small>THB</small></h6>
                </div>
            </div>
            <div class="row">
                <div class="col text-right">
                    <span>ลบ</span>
                    <span>แก้ไข</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col bg-white py-2 mb-1">
    <h6 class="pb-2 font-weight-bold">ชื่อและที่อยู่เบอร์ติดต่อ</h6>
    <div class="row" @onclick="GoToContactInfo">
        <div class="col">
            <small class="text-secondary">@Address</small>
        </div>
        <div class="col text-right">
            <span class="oi oi-chevron-right text-secondary"></span>
        </div>
    </div>
</div>

<div class="col bg-white py-2 mb-1">
    <h6 class="font-weight-bold pb-1">วิธีการชำระเงิน</h6>
    <fieldset class="form-group m-0">
        <div class="row">
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1">
                    <label class="form-check-label" for="gridRadios1">
                        First radio <small class="text-muted">(ฟรีค่าธรรมเนียม)</small>
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
                    <label class="form-check-label" for="gridRadios2">
                        Second radio <small class="text-muted">(ค่าธรรมเนียม 15.00 THB)</small>
                    </label>
                </div>
                <div class="form-check disabled">
                    <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3" value="option3">
                    <label class="form-check-label" for="gridRadios3">
                        Third radio <small class="text-muted">(ค่าธรรมเนียม 15.00 THB)</small>
                    </label>
                </div>
            </div>
        </div>
    </fieldset>
</div>

<div class="col bg-white py-2 mb-1">
    <h6 class="font-weight-bold pb-1">ตัวเลือกการจัดส่ง</h6>
    <fieldset class="form-group m-0">
        <div class="row">
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gridRadios2" id="gridRadios12" value="option12">
                    <label class="form-check-label" for="gridRadios1">
                        ไปรษณีย์ไทย <small class="text-muted">(29.00 THB)</small>
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gridRadios2" id="gridRadios22" value="option22">
                    <label class="form-check-label" for="gridRadios2">
                        Kerry Express <small class="text-muted">(29.00 THB)</small>
                    </label>
                </div>
                <div class="form-check disabled">
                    <input class="form-check-input" type="radio" name="gridRadios2" id="gridRadios32" value="option32">
                    <label class="form-check-label" for="gridRadios3">
                        Flash Express <small class="text-muted">(29.00 THB)</small>
                    </label>
                </div>
            </div>
        </div>
    </fieldset>
</div>

<ConfirmButton Title="สั่งซื้อสินค้า"/>

@code {
    private void GoToContactInfo()
    {
        //TODO: Implement
        NavigationManager.NavigateTo("address");
    }

    public string Address { get; set; }

    protected override void OnInitialized()
    {
        Address = Address ?? "ยังไม่มีข้อมูล";
    }
}

@page "/addproduct"
@inject NavigationManager NavigationManager

<DownloadAppNav />

<div class="col bg-white pt-2 pb-0">
    <div class="row">
        <div class="col-3 p-0 text-center">
            <img height="60" width="60"
                src="https://cdn4.buysellads.net/uu/7/87530/1618004014-MC_CSSTricks_Logo_600x600-3.png">
        </div>
        <div class="col border-bottom">
            <div class="row pb-1">
                <div class="col text-truncate p-0">
                    <h6>1x Product Name</h6>
                </div>
                <div class="col text-right">
                    <h6>0.00 <small>THB</small></h6>
                </div>
            </div>
            <div class="row pb-1">
                <div class="col text-truncate p-0 text-danger">
                    <h6>Detail1, Detail2</h6>
                </div>
                <div hidden class="col text-right">
                    <h6>0.00 <small>THB</small></h6>
                </div>
            </div>
            <div class="row">
                <div class="col text-right">
                    <span><br /></span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col bg-white py-2 border-bottom">
    <div class="row">
        <div class="col-3 p-0 text-center">
        </div>
        <div class="col">
            <div class="row pb-1">
                <div class="col text-truncate p-0">
                    <h6 class="font-weight-bold">รายละเอียดเพิ่มเติม</h6>
                </div>
            </div>
        </div>
    </div>
</div>
<form>
    <div class="col bg-white py-2">
        <div class="form-group">
            <label class="font-weight-bold" for="note">หมายเหตุ</label>
            <textarea class="form-control border-0" id="note" rows="2"></textarea>
        </div>
    </div>
    <div class="col bg-white border-top">
        <div class="row align-items-center">
            <div class="col-2 p-0 text-center">
                <span><small>จำนวน</small></span>
            </div>
            <div class="col-2 p-0 text-center" @onclick="Minus">
                <span class="oi oi-minus text-danger"></span>
            </div>
            <div class="col-2 p-0 text-center">
                <span class="font-weight-bold">@Amount</span>
            </div>
            <div class="col-2 p-0 text-center" @onclick="Plus">
                <span class="oi oi-plus text-danger"></span>
            </div>
            <div class="col-4 p-0 text-center" @onclick="GoToCart">
                <button type="button" class="btn btn-danger btn-block rounded-0">ยืนยัน</button>
            </div>
        </div>
    </div>

</form>

@code {
    private int Amount = 0;

    private void Plus()
    {
        Amount++;
    }

    private void Minus()
    {
        if (Amount > 0)
        {
            Amount--;
        }
    }

    private void GoToCart(){
        NavigationManager.NavigateTo("cart" + "/" + Amount);
    }
}
